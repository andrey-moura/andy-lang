// You can declare a base class in a separate file and #include it in your main file
class Base
{
    function new() {

    }

    function say_hello() {
        puts("Hello from base class!");
    }
}

// You can use 'extends', ':' and '<' to declare a base class
class Derived extends Base {
    function new() {
        super();
    }
}

var derived = new Derived();
derived.say_hello();