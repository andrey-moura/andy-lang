// You can declare a base class in a separate file and #include it in your main file
type Speaker
    fn new
    end
end

// You can use 'extends', ':' or '<' to declare a base class
type Person extends Speaker
    fn new
        super
    end

    fn speak(arg)
        out arg
    end
end

var person = new Person(test: '123');

within person
    speak 'Hello, world!'
end